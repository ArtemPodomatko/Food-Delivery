<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_back"
        android:layout_marginTop="21dp"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/food_name"
        android:textSize="24sp"
        android:fontFamily="@font/yeonsung"
        app:layout_constraintTop_toBottomOf="@id/icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <ImageView
        android:id="@+id/bottomSheet_im"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/food_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/short_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Short description"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/yeonsung"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@id/bottomSheet_im"
        app:layout_constraintStart_toStartOf="@id/bottomSheet_im"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/yeonsung"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/short_des"
        app:layout_constraintTop_toBottomOf="@id/short_des"
        tools:text="Lorem ipsum dolor sit amet,
        \nconsectetur adipiscing elit, \nsed do eiusmod tempor incididunt
        \nut labore et dolore magna aliqua. Ut enim ad " />

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ingredients"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/yeonsung"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="@id/description"/>

    <TextView
        android:id="@+id/list_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="Strowberry \nCream \nWheat"
        android:fontFamily="@font/lato"
        android:textSize="12sp"
        android:lineSpacingExtra="7sp"
        app:layout_constraintTop_toBottomOf="@id/ingredients"
        app:layout_constraintStart_toStartOf="@id/ingredients"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        tools:text="Add To Chart"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:elevation="50dp"
        android:shadowColor="@color/ed_shadow_color"
        android:background="@drawable/green_btn"
        app:layout_constraintTop_toBottomOf="@id/list_ingredients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>