<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="22dp"
    android:elevation="0dp"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/menu_food_cardView"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/menu_image_view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/menu_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yeonsung"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/menu_food_cardView"
            app:layout_constraintStart_toEndOf="@id/menu_food_cardView"
            app:layout_constraintTop_toBottomOf="@id/menu_food_cardView"
            />

        <TextView
            android:id="@+id/menu_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:textColor="@color/end_green_color"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/menu_food_name"
            app:layout_constraintTop_toBottomOf="@id/menu_food_name"
            />

        <TextView
            android:id="@+id/home_food_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_view_green_bg"
            android:textColor="@color/white"
            android:text="@string/add_to_cart"
            android:textSize="20sp"
            android:fontFamily="@font/lato"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@id/menu_food_price"
            app:layout_constraintStart_toStartOf="@id/menu_food_price"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>