<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="22dp"
    android:elevation="0dp"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/home_food_cardView"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/home_food_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                android:background="@drawable/pop_menu_burger"/>



        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/home_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/herbal_pancake"
            android:layout_marginStart="23dp"
            android:fontFamily="@font/yeonsung"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/home_food_cardView"
            app:layout_constraintStart_toEndOf="@id/home_food_cardView"
            app:layout_constraintTop_toTopOf="@id/home_food_cardView"
            />

        <TextView
            android:id="@+id/home_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato"
            android:text="$7"
            android:textStyle="bold"
            android:textColor="@color/end_green_color"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_food_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_view_green_bg"
            android:textColor="@color/white"
            android:text="@string/add_to_cart"
            android:textSize="11sp"
            android:fontFamily="@font/lato"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            app:layout_constraintEnd_toEndOf="@id/home_food_price"
            app:layout_constraintTop_toBottomOf="@id/home_food_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>
